<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/titleImage"
        android:src="@drawable/titlebar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knob - a small lump or ball, especially at the end or on the surface of something "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:textColor="#ff000000" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knobButton"
        android:src="@drawable/speak"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knowledgeButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knobButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knowledge - information gathered over time"
        android:id="@+id/textView2"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knowledgeButton"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/kneeButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knowledgeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knee - the joint between the top part of the leg and bottom"
        android:id="@+id/textView3"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/kneeButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knotButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/kneeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knot - a fastening made by looping two strings together"
        android:id="@+id/textView4"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knotButton"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knapsackButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knotButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knapsack - a soldiers or hiker&apos;s bag with shoulder straps"
        android:id="@+id/textView5"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knapsackButton"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knuckleButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knapsackButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knuckle - part of the fingers where it meets the hands"
        android:id="@+id/textView6"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knuckleButton"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knifeButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knuckleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knife - an implement used to items like bread"
        android:id="@+id/textView7"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knifeButton"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knowButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knifeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Know - be aware of something"
        android:id="@+id/textView8"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knowButton"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knockButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knowButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knock - to make noise, knock on door "
        android:id="@+id/textView9"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knockButton"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/knitButton"
        android:src="@drawable/speak"
        android:layout_below="@+id/knockButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Knit - to put together"
        android:id="@+id/textView10"
        android:autoText="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/knitButton"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

        </RelativeLayout>
</RelativeLayout>

