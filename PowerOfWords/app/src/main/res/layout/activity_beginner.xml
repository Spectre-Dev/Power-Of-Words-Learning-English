<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ianc.powerofwords.BeginnerActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Sign Out"
        android:id="@+id/signOutBtn"
        android:onClick="signOut"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/readAndListenBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Read and Listen"
            android:onClick="readAndListenBtn"
            android:layout_above="@+id/alphabetBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffff423d" />

        <Button
            android:id="@+id/alphabetBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alphabet"
            android:onClick="AlfaB"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ff5c79ff" />

        <Button
            android:id="@+id/weekDaysBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Week Days"
            android:onClick="WD"
            android:layout_below="@+id/alphabetBtn"
            android:layout_centerHorizontal="true"
            android:background="#ffa82cff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select a Topic"
            android:id="@+id/textView31"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp" />
    </RelativeLayout>
</LinearLayout>
