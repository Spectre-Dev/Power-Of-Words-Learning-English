<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
    <!-- Header image -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Score:"
                    android:id="@+id/ScoreLbl" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/scoreTxt" />

            </LinearLayout>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/GridLayout"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/headerTxt"
                    android:layout_centerHorizontal="true"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|top" />

                <ImageButton
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:background="@null"

                    android:id="@+id/imageBtn"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="20dp" />

            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/lowerGrid"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal">


                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="BAKER"
                    android:id="@+id/redBtn"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:background="#ffff050b"
                    android:onClick="redAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="CHAIR"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/yellowAnsBtn"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:background="#ffffd115"
                    android:onClick="yellowAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="CLOCK"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/pinkAnsBtn"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="left|top"
                    android:background="#ffff7ea2"
                    android:onClick="pinkAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="COMPUTER"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/greenAnsBtn"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_gravity="left|top"
                    android:background="#ff19ff59"
                    android:onClick="greenAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="MOUSE"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/purpleAnsBtn"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:background="#ffc00bff"
                    android:onClick="purpleAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="PINEAPPLE"
                    android:id="@+id/orangeAnsBtn"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:background="#ffff970e"
                    android:onClick="orangeAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="PLANE"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/blueAnsBtn"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="left|top"
                    android:background="#ff1e36ff"
                    android:onClick="blueAnsBtn"
                    android:textColor="#ffffff" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="TABLE"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/blackAnsBtn"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:layout_gravity="left|top"
                    android:background="#000000"
                    android:onClick="blackAnsBtn"
                    android:textColor="#ffffff" />


            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
