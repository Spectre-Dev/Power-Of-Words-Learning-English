                android:background="#00aeef"
                android:onClick="RBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="S"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/SBtn"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="SBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="T"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/TBtn"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="TBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="U"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/UBtn"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="UBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="V"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/blackAnsBtn"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="VBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="W"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/WBtn"
                android:layout_row="4"
                android:layout_column="4"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="WBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="X"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/XBtn"
                android:layout_row="4"
                android:layout_column="5"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="XBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Y"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/YBtn"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="YBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Z"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/ZBtn"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:background="#00aeef"
                android:onClick="ZBtn" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>