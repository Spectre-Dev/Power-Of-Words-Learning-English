<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose a topic:"
            android:id="@+id/numbersLbl"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Colours Game: Learn and Play"
            android:id="@+id/ColorLbl"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/colourBtn"
            android:src="@drawable/col_btn"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="colourBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Numbers Game: Learn and Play"
            android:id="@+id/NumLbl"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/numberBtn"
            android:src="@drawable/num_btn"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="numberBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Letters Game: Learn and Play"
            android:id="@+id/LetterLbl"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/letterBtn"
            android:src="@drawable/letters_btn"
            android:text="test"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="letterBtn" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp">




        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal">

            <!-- yellow button -->

        </GridLayout>

    </LinearLayout>

</LinearLayout>
