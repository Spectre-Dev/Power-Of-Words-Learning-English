<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!-- Header image -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/scoreLbl"
                android:id="@+id/ScoreLbl" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="5dp"
                android:id="@+id/scoreTxt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Countdown: "
                android:id="@+id/TimerLbl"
                android:textColor="#ffff0405" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="30:00"
                android:id="@+id/CountdownLbl" />

        </LinearLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GridLayout"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Lets_Play_Activity"
                android:id="@+id/headerTxt"
                android:layout_centerHorizontal="true"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@null"
                android:src="@drawable/blank"
                android:id="@+id/imageBtn"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="10dp"
                android:onClick="imageBtn" />

        </GridLayout>


        <GridLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:text="1"
                android:id="@+id/oneBtn"
                android:background="#00aeef"
                android:onClick="one"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:id="@+id/twoBtn"
                android:background="#00aeef"
                android:onClick="two"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="3"
                android:id="@+id/threeBtn"
                android:background="#00aeef"
                android:onClick="three"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="4"
                android:id="@+id/fourBtn"
                android:background="#00aeef"
                android:onClick="four"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="0"
                android:layout_column="4"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="5"
                android:id="@+id/fiveBtn"
                android:background="#00aeef"
                android:onClick="five"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:text="6"
                android:id="@+id/sixBtn"
                android:background="#00aeef"
                android:onClick="six"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="7"
                android:id="@+id/sevenBtn"
                android:background="#00aeef"
                android:onClick="seven"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="8"
                android:id="@+id/eightBtn"
                android:background="#00aeef"
                android:onClick="eight"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="9"
                android:id="@+id/nineBtn"
                android:background="#00aeef"
                android:onClick="nine"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_column="4"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:id="@+id/tenBtn"
                android:background="#00aeef"
                android:onClick="ten"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:text="20"
                android:id="@+id/twentyBtn"
                android:background="#00aeef"
                android:onClick="twenty"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="30"
                android:id="@+id/thirtyBtn"
                android:background="#00aeef"
                android:onClick="thirty"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="2"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="40"
                android:id="@+id/fortyBtn"
                android:background="#00aeef"
                android:onClick="forty"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="2"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="50"
                android:id="@+id/fiftyBtn"
                android:background="#00aeef"
                android:onClick="fifty"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="2"
                android:layout_column="4"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="60"
                android:id="@+id/sixtyBtn"
                android:background="#00aeef"
                android:onClick="sixty"/>

        </GridLayout>

        <GridLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:text="70"
                android:id="@+id/seventyBtn"
                android:background="#00aeef"
                android:onClick="seventy"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="3"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="80"
                android:id="@+id/eightyBtn"
                android:background="#00aeef"
                android:onClick="eighty"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="3"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="90"
                android:id="@+id/ninetyBtn"
                android:background="#00aeef"
                android:onClick="ninety"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="135dp"
                android:layout_height="65dp"
                android:layout_row="3"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="100"
                android:id="@+id/hundredBtn"
                android:background="#00aeef"
                android:onClick="hundred"/>
        </GridLayout>

    </LinearLayout>

</LinearLayout>